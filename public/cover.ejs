<body class="bg-gray-900">
    <h1 class="text-white text-center text-xl font-bold mb-8">Voici les covers de <%= albumCovers[0].name %></h1>

    <div class="flex flex-wrap justify-center">
        <% albumCovers.forEach(album => { %>
            <div class="flex flex-col items-center w-[300px] mb-8 mx-4 bg-gray-500 pl-2 pr-2 pt-2 rounded-md">
                <div class="relative w-full h-full">
                    <img src="<%= album.coverUrl %>" class="w-full h-full object-cover rounded-md shadow-2xl" onerror="this.onerror=null;this.src='img/nocover.png';">
                    <button class="absolute top-3 right-3 flex items-center justify-center rounded-full bg-red-600 p-2 text-brand-500 hover:cursor-pointer">
                        <div class="flex h-full w-full items-center justify-center rounded-full text-xl hover:bg-gray-50">
                            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="32" d="M352.92 80C288 80 256 144 256 144s-32-64-96.92-64c-52.76 0-94.54 44.14-95.08 96.81-1.1 109.33 86.73 187.08 183 252.42a16 16 0 0018 0c96.26-65.34 184.09-143.09 183-252.42-.54-52.67-42.32-96.81-95.08-96.81z"></path></svg>
                        </div>
                    </button>
                </div>
                <div class="mt-3 w-full">
                    <p class="text-lg font-bold text-gray-200 truncate w-full"><%= album.title %></p>
                    <p class="mt-1 text-sm font-medium text-gray-100 md:mt-2">By <%= album.name%> </p>
                    <button href="" class="linear rounded-md bg-brand-900 px-4 py-2 text-base font-medium text-white mt-3 transition duration-200 hover:bg-brand-800 active:bg-brand-700"></button>
                </div>
            </div>
        <% }) %>
    </div>
</body>


